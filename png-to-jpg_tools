  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const fileInput = document.getElementById('file-input');
      const dropZone = document.getElementById('drop-zone');
      const qualitySlider = document.getElementById('quality-slider');
      const qualityValue = document.getElementById('quality-value');
      const convertBtn = document.getElementById('convert-btn');
      const downloadZipBtn = document.getElementById('download-zip-btn');
      const clearBtn = document.getElementById('clear-btn');
      const fileList = document.getElementById('file-list');

      let filesToProcess = [];
      let convertedFilesData = [];

      // --- Drag & Drop ---
      dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('dragover');
      });
      dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('dragover');
      });
      dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        const files = e.dataTransfer.files;
        handleFiles(files);
      });
      
      // --- File Input Change ---
      fileInput.addEventListener('change', (e) => {
        handleFiles(e.target.files);
      });

      // --- UI Updates ---
      qualitySlider.addEventListener('input', (e) => {
        qualityValue.textContent = `${e.target.value}%`;
      });
      
      function handleFiles(files) {
        // Filter for PNG files only
        const pngFiles = Array.from(files).filter(file => file.type === 'image/png');
        if (pngFiles.length === 0 && files.length > 0) {
            alert('Only PNG files are supported. Please select valid PNG images.');
            return;
        }

        pngFiles.forEach(file => {
          if (!filesToProcess.some(f => f.name === file.name && f.size === file.size)) {
            filesToProcess.push(file);
            const listItem = document.createElement('li');
            listItem.id = `file-${filesToProcess.length - 1}`;
            listItem.innerHTML = `
              <div class="file-info">
                <i class="fas fa-file-image"></i>
                <span>${file.name}</span>
              </div>
              <div class="file-status status-pending">Pending</div>
              <div class="file-download"></div>
            `;
            fileList.appendChild(listItem);
          }
        });
        updateButtonStates();
      }

      function updateButtonStates() {
        const hasFiles = filesToProcess.length > 0;
        convertBtn.disabled = !hasFiles || convertedFilesData.length > 0;
        clearBtn.disabled = !hasFiles;
        downloadZipBtn.style.display = convertedFilesData.length > 1 ? 'inline-block' : 'none';
      }

      // --- Conversion Logic ---
      convertBtn.addEventListener('click', async () => {
        if (filesToProcess.length === 0) return;
        
        convertBtn.disabled = true;
        convertBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Converting...';

        for (let i = 0; i < filesToProcess.length; i++) {
          const file = filesToProcess[i];
          const listItem = document.getElementById(`file-${i}`);
          const statusDiv = listItem.querySelector('.file-status');
          const downloadDiv = listItem.querySelector('.file-download');
          
          try {
            statusDiv.textContent = 'Converting...';
            statusDiv.className = 'file-status status-converting';
            
            const jpgDataUrl = await convertPngToJpg(file);
            const newFileName = file.name.replace(/\.png$/i, '.jpg');

            convertedFilesData.push({ name: newFileName, dataUrl: jpgDataUrl });

            downloadDiv.innerHTML = `<a href="${jpgDataUrl}" download="${newFileName}">Download</a>`;
            statusDiv.textContent = 'Done!';
            statusDiv.className = 'file-status status-done';
          } catch (error) {
            console.error('Conversion Error:', error);
            statusDiv.textContent = 'Error';
            statusDiv.className = 'file-status status-error';
            downloadDiv.textContent = 'Conversion failed.';
          }
        }
        
        convertBtn.innerHTML = 'Convert Files';
        updateButtonStates();
      });

      function convertPngToJpg(file) {
        return new Promise((resolve, reject) => {
          const reader = new FileReader();
          reader.readAsDataURL(file);
          reader.onload = (event) => {
            const img = new Image();
            img.src = event.target.result;
            img.onload = () => {
              const canvas = document.createElement('canvas');
              canvas.width = img.width;
              canvas.height = img.height;
              
              const ctx = canvas.getContext('2d');
              // Fill background with white, since JPG doesn't support transparency
              ctx.fillStyle = '#FFFFFF';
              ctx.fillRect(0, 0, canvas.width, canvas.height);
              ctx.drawImage(img, 0, 0);
              
              const quality = parseInt(qualitySlider.value, 10) / 100;
              const dataUrl = canvas.toDataURL('image/jpeg', quality);
              resolve(dataUrl);
            };
            img.onerror = (error) => reject(error);
          };
          reader.onerror = (error) => reject(error);
        });
      }
      
      // --- Download & Clear Logic ---
      downloadZipBtn.addEventListener('click', async () => {
        if (convertedFilesData.length === 0) return;
        
        downloadZipBtn.disabled = true;
        downloadZipBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Zipping...';

        const zip = new JSZip();
        convertedFilesData.forEach(file => {
          // Get base64 content from data URL
          const base64Data = file.dataUrl.split(',')[1];
          zip.file(file.name, base64Data, { base64: true });
        });

        zip.generateAsync({ type: 'blob' }).then(content => {
          const link = document.createElement('a');
          link.href = URL.createObjectURL(content);
          link.download = 'vstools-converted-images.zip';
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
          
          downloadZipBtn.disabled = false;
          downloadZipBtn.innerHTML = 'Download All as ZIP';
        });
      });

      clearBtn.addEventListener('click', () => {
        filesToProcess = [];
        convertedFilesData = [];
        fileList.innerHTML = '';
        fileInput.value = ''; // Reset file input
        updateButtonStates();
      });

    });
  </script>

</body>
</html>
